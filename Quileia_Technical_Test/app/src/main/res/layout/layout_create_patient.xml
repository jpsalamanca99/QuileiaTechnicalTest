<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_CreatePatient_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Nombre"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editText_CreatePatient_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Apellido"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editText_CreatePatient_BirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:ems="10"
            android:inputType="date"
            android:hint="Fecha de nacimiento dd/MM/yyyy"/>

        <EditText
            android:id="@+id/editText_CreatePatient_IDNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Numero de identificacion"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editText_CreatePatient_ModeratedFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Valor Cuota Moderadora"
            android:inputType="numberDecimal"/>

        <CheckBox
            android:id="@+id/checkBox_CreatePatient_InTreatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Esta en tratamiento"/>

    </LinearLayout>
</ScrollView>
